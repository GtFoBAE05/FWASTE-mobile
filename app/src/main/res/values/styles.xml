<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sectionDivider">
        <item name="dividerColor">@color/primary_surface</item>
        <!--        <item name="android:alpha">0.4</item>-->
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">50%</item>
    </style>

    <style name="selectableComponent">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Style.DialogButton.Black" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Style.DialogButton.Orange" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Style.DialogButton.Red" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Style.DialogButton.White" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:attr/colorAccent</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?android:attr/colorAccent</item>
    </style>

    <style name="Style.MonthYearPickerDialog.Orange" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:backgroundTint">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/Style.DialogButton.Black</item>
        <item name="buttonBarPositiveButtonStyle">@style/Style.DialogButton.Orange</item>
        <item name="headerBackgroundColor">@color/orange</item>
        <item name="headerTextColor">#66000000</item>
        <item name="headerTextColorSelected">@color/black</item>
        <item name="monthBackgroundColorSelected">@color/orange</item>
        <item name="monthTextColor">@color/black</item>
        <item name="monthTextColorDisabled">#4F000000</item>
        <item name="monthTextColorSelected">@color/black</item>
        <item name="yearTextColor">@color/black</item>
        <item name="yearTextColorSelected">@color/orange</item>
    </style>

</resources>